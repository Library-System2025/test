<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="UserController"
            prefWidth="800" prefHeight="520">

    <!-- ðŸ”¹ Ø§Ù„Ø´Ø±ÙŠØ· Ø§Ù„Ø¹Ù„ÙˆÙŠ -->
    <top>
        <HBox spacing="15" alignment="CENTER_RIGHT">
            <padding>
                <Insets top="10" right="15" bottom="10" left="15"/>
            </padding>

            <Label fx:id="welcomeLabel" text="User Dashboard"
                   style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
            <Button text="Logout" onAction="#handleLogout"
                    style="-fx-background-color:#d9534f; -fx-text-fill:white; -fx-font-weight:bold;"/>
        </HBox>
    </top>

    <!-- ðŸ”¹ Ø§Ù„Ù…Ø­ØªÙˆÙ‰ Ø§Ù„Ø±Ø¦ÙŠØ³ÙŠ -->
    <center>
        <VBox spacing="15">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <!-- ðŸ“š Ø¬Ø¯ÙˆÙ„ Ø§Ù„ÙƒØªØ¨ -->
            <TableView fx:id="bookTable" prefHeight="330">
                <columns>
                    <TableColumn fx:id="titleColumn" text="Title" prefWidth="180"/>
                    <TableColumn fx:id="authorColumn" text="Author" prefWidth="130"/>
                    <TableColumn fx:id="isbnColumn" text="ISBN" prefWidth="120"/>
                    <TableColumn fx:id="statusColumn" text="Status" prefWidth="100"/>
                    <TableColumn fx:id="dueDateColumn" text="Due Date" prefWidth="120"/>
                    <TableColumn fx:id="fineColumn" text="Fine ($)" prefWidth="90"/>
             
                </columns>
            </TableView>

            <!-- ðŸ”˜ Ø§Ù„Ø£Ø²Ø±Ø§Ø± Ø§Ù„Ø³ÙÙ„ÙŠØ© -->
            <HBox spacing="10" alignment="CENTER_LEFT">
                <TextField fx:id="paymentField" promptText="Enter amount to pay..." prefWidth="200"/>

                <Button text="Pay Fine" onAction="#handlePayFine"
                        style="-fx-background-color:#5cb85c; -fx-text-fill:white; -fx-font-weight:bold;"/>

                <Button text="Borrow Book" onAction="#handleBorrowBook"
                        style="-fx-background-color:#0275d8; -fx-text-fill:white; -fx-font-weight:bold;"/>

                <Button text="Return Book" onAction="#handleReturnBook"
                        style="-fx-background-color:#f0ad4e; -fx-text-fill:white; -fx-font-weight:bold;"/>

                <Button text="Refresh" onAction="#handleReload"
                        style="-fx-background-color:#5bc0de; -fx-text-fill:white; -fx-font-weight:bold;"/>
            </HBox>

            <Label fx:id="infoLabel" textFill="green" style="-fx-font-size: 14px;"/>
            <Label fx:id="messageLabel" textFill="blue" style="-fx-font-size: 13px;"/>
        </VBox>
    </center>
</BorderPane>
