                    <TableColumn fx:id="authorColumn" text="Author" prefWidth="130"/>
                    <TableColumn fx:id="isbnColumn" text="ISBN" prefWidth="120"/>
                    <TableColumn fx:id="statusColumn" text="Status" prefWidth="100"/>
