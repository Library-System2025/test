<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>


<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="homepageController"
            prefWidth="800" prefHeight="600">

  
    <top>
        <HBox spacing="15.0" alignment="CENTER_RIGHT" style="-fx-background-color: #f4f4f4; -fx-border-color: #ccc; -fx-border-width: 0 0 1 0;">
            <padding>
                <Insets top="10" right="15" bottom="10" left="15"/>
            </padding>
            <Label fx:id="welcomeLabel" text="Welcome!" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #333;"/>
            <Button text="Logout" onAction="#handleLogout"
                    style="-fx-background-color: #d9534f; -fx-text-fill: white; -fx-font-weight: bold; cursor: hand;"/>
        </HBox>
    </top>

  
    <center>
        <TabPane tabClosingPolicy="UNAVAILABLE">
            <tabs>
                
               
                <Tab text="ðŸ“š Media Management">
                    <VBox spacing="20.0">
                        <padding>
                            <Insets top="20" right="20" bottom="20" left="20"/>
                        </padding>

                       
                        <TitledPane text="Add New Item" expanded="true" collapsible="false">
                            <VBox spacing="10.0">
                                <padding>
                                    <Insets top="10" right="10" bottom="10" left="10"/>
                                </padding>
                                <HBox spacing="10">
                                   
                                    <ComboBox fx:id="typeCombo" promptText="Type" prefWidth="90"/>
                                    
                                    <TextField fx:id="titleField" promptText="Title" HBox.hgrow="ALWAYS"/>
                                    <TextField fx:id="authorField" promptText="Author" HBox.hgrow="ALWAYS"/>
                                    <TextField fx:id="isbnField" promptText="ISBN" prefWidth="120"/>
                                    <Button text="Add" onAction="#handleAddBook"
                                            style="-fx-background-color: #5cb85c; -fx-text-fill: white; -fx-font-weight: bold;"/>
                                </HBox>
                                <Label fx:id="addBookMessage" textFill="green"/>
                            </VBox>
                        </TitledPane>

                       
                        <TitledPane text="Search &amp; List Media" expanded="true" collapsible="false" VBox.vgrow="ALWAYS">
                            <VBox spacing="10.0">
                                <padding>
                                    <Insets top="10" right="10" bottom="10" left="10"/>
                                </padding>

                                <HBox spacing="10.0" alignment="CENTER_LEFT">
                                    <ComboBox fx:id="searchByCombo" prefWidth="120.0" promptText="Search by"/>
                                    <TextField fx:id="searchField" promptText="Enter keyword..." HBox.hgrow="ALWAYS"/>
                                    <Button text="Search" onAction="#handleSearch"
                                            style="-fx-background-color: #0275d8; -fx-text-fill: white; -fx-font-weight: bold;"/>
                                    <Button text="Reload All" onAction="#handleReload"
                                            style="-fx-background-color: #5bc0de; -fx-text-fill: white; -fx-font-weight: bold;"/>
                                </HBox>

                                <TableView fx:id="searchResultsTable" VBox.vgrow="ALWAYS">
    <columns>
        <TableColumn fx:id="typeColumn" text="Type" prefWidth="70"/>
        <TableColumn fx:id="titleColumn" text="Title" prefWidth="150"/>
        <TableColumn fx:id="authorColumn" text="Author" prefWidth="130"/>
        <TableColumn fx:id="isbnColumn" text="ISBN" prefWidth="100"/>
        <TableColumn fx:id="copyIdColumn" text="Copy ID" prefWidth="80"/>                                        
        <TableColumn fx:id="statusColumn" text="Status" prefWidth="90"/>
        <TableColumn fx:id="dueDateColumn" text="Due Date" prefWidth="100"/>
        <TableColumn fx:id="fineColumn" text="Fine ($)" prefWidth="70"/>
        <TableColumn fx:id="borrowedByColumn" text="Borrowed By" prefWidth="100"/>
    </columns>
    <columnResizePolicy>
        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
    </columnResizePolicy>
</TableView>

                            </VBox>
                        </TitledPane>
                    </VBox>
                </Tab>

              
                <Tab text="ðŸ‘¤ Users Management">
                    <VBox spacing="15.0">
                        <padding>
                            <Insets top="20" right="20" bottom="20" left="20"/>
                        </padding>

                        <Label text="Registered Users List" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #333;"/>
                        
                        <TableView fx:id="usersTable" VBox.vgrow="ALWAYS">
                            <columns>
                                <TableColumn fx:id="colUsername" text="Username" prefWidth="150"/>
                                <TableColumn fx:id="colRole" text="Role" prefWidth="100"/>
                                <TableColumn fx:id="colMembership" text="Membership Type" prefWidth="150"/>
                            </columns>
                             <columnResizePolicy>
                                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                            </columnResizePolicy>
                        </TableView>

                        <HBox spacing="10" alignment="CENTER_RIGHT">
    <Label text="* Select a user to manage their account or send reminders."
           textFill="gray"/>

   
    <Button text="ðŸ“§ Send Reminder"
            onAction="#handleSendReminder"
            style="-fx-background-color: #5cb85c; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 13px; cursor: hand;"/>

  
    <Button text="ðŸ—‘ Unregister User"
            onAction="#handleDeleteUser"
            style="-fx-background-color: #d9534f; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 13px; cursor: hand;"/>
</HBox>

                    </VBox>
                </Tab>

            </tabs>
        </TabPane>
    </center>
</BorderPane>